<div class='modal'>
    <img class="modal_img" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{original_title}}" />
    <div class="text_content">
        <h1 class="text_content__name">{{title}}</h1>
        <table class="text_content__info">
            <tr class="text_content__trow">
                <td class="text_content__data">Vote / Votes</td>
                <td class="text_content__data">
                    <span class="text_content__rate">{{vote_average}}</span>
                    <span class="text_content__slash">/</span>
                    <span class="text_content__rate">{{vote_count}}</span>
                </td>
            </tr>
            <tr class="text_content__trow">
                <td class="text_content__data">Popularity</td>
                <td class="text_content__data">{{popularity}}</td>
            </tr>
            <tr class="text_content__trow">
                <td class="text_content__data">Original Titles</td>
                <td class="text_content__data">{{title}}</td>
            </tr>
            <tr class="text_content__trow">
                <td class="text_content__data">Genre</td>
                <td class="text_content__data ">
                    {{#each genres}}
                    <span class='genres'>{{this.name}}</span>

                    {{/each}}
                </td>
            </tr>
        </table>
